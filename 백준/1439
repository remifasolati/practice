#include <iostream>

int main() {
    char s[1000000],first;
    int i,c,flag;

    scanf("%s", s);

    first = s[i++];

    for(;s[i];i++){
        if(s[i]==first) flag = 0;
        else{
            if(!flag){
                c++;
                flag = 1;
            }
        }
    }

    printf("%d",c);

    return 0;
}
